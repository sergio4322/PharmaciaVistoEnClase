{% extends 'base.html.twig' %}

{% block body %}
    <h1>Patient</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ patient.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ patient.lastName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ patient.age }}</td>
            </tr>
            <tr>
                <th>Idnumber</th>
                <td>{{ patient.idNumber }}</td>
            </tr>
            <tr>
                <th>Idtype</th>
                <td>{{ patient.idType }}</td>
            </tr>
            <tr>
                <th>Analisis</th>
                <td>{{ patient.analisis }}</td>
            </tr>
            <tr>
                <th>Observations</th>
                <td>{{ patient.observations }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('patient_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
